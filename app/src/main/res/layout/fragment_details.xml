<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- TABLE LAYOUT USED BECAUSE SCROLL VIEW -->
        <TextView
            android:id="@+id/txt_enterprise_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Nome da Empresa"
            android:textSize="30sp"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Informações da empresa: "
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15sp" />

        <TextView
            android:id="@+id/txt_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Endereço: "
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15sp" />

        <TextView
            android:id="@+id/txt_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telefone:"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15sp" />

        <TextView
            android:id="@+id/txt_cep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CEP: "
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15sp" />

        <TextView
            android:id="@+id/txt_district"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bairro: "
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15sp" />

        <TextView
            android:id="@+id/txt_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cidade: "
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15sp" />


        <TextView
            android:id="@+id/txt_uf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UF: "
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo de Empresa: Barbearia"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:layout_marginLeft="15sp" />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver no Mapa"
            android:layout_marginTop="50dp"
            android:id="@+id/btn_add_enterprise" />

    <RelativeLayout
        android:id="@+id/container2"
        android:layout_width="match_parent"
        android:layout_height="200dp" />
</LinearLayout>